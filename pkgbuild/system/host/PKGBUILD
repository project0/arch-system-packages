source ../base/lib.helper

pkgver="$(_pkgver)"
pkgrel="${PKGREL-1}"
pkgbase='project0-host'
pkgname=(
        "${pkgbase}-daedalus"
        "${pkgbase}-finalizer"
        "${pkgbase}-stargazer"
)
pkgdesc='Project0 package per host'
arch=('any')
license=('MIT')

