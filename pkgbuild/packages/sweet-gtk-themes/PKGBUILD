# Maintainer: Richard Hillmann <richie at project0 dot de>
pkgname=project0-sweet-gtk-themes
pkgver=20220820
pkgrel=1
pkgdesc="Sweet themes"
arch=('any')
url="https://github.com/EliverLara/Sweet.git"
license=('GNU')
conflicts=(
    sweet-gtk-theme
)

_branches=(
    master
    mars
    nova
    Ambar
    Ambar-Blue
)

_kinds=(
    Sweet
    Sweet-mars
    Sweet-nova
    Sweet-Ambar
    Sweet-Ambar-Blue
)
_commits=(
    90afc51ca4eb619ba119ff4616fdb675828cd57c # master
    e4d766908395cb661507dbf09c437842509b8c87 # mars
    0061be8e6b4a0e6bb0a8f19d3f939a527414ff31 # nova
    c1b92f1d70dea532baf353e6a7b5a2837077c534 # Ambar
    7749e1eab0477c0c4c76b9de24373007bb3c17fe # Ambar-Blue
)

function srcname () {
    c="${_commits[$1]}"
    k="${_kinds[$1]}"
    echo "git.${pkgname}-${k}-${c}"
}


for i in "${!_kinds[@]}"; do
    c="${_commits[$i]}"
    k="${_kinds[$i]}"
    source+=("$(srcname "$i")::git+${url}#commit=$c")
done

sha256sums=('SKIP'
            'SKIP'
            'SKIP'
            'SKIP'
            'SKIP')

pkgver() {
    (cd "${srcdir}/$(srcname "0")" && git log -1 --format=%ad --date=format:'%Y%m%d')
}

prepare() {
    find "${srcdir}" -type f -name "*scss" -delete
    rm -rf "${srcdir}"/*/{Art,src}
    find "${srcdir}" -type d -empty -delete
}

package() {
    themes="${pkgdir}/usr/share/themes"

    for i in "${!_kinds[@]}"; do
        k="${_kinds[$i]}"
        install -dm755 "${themes}/${k}"
        cp -r "${srcdir}/$(srcname "$i")/"* "${themes}/${k}/"
    done
}
