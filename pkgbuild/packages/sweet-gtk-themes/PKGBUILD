# Maintainer: Richard Hillmann <richie at project0 dot de>
pkgname=project0-sweet-gtk-themes
pkgver=20220926
pkgrel=1
pkgdesc="Sweet themes"
arch=('any')
url="https://github.com/EliverLara/Sweet.git"
license=('GNU')
conflicts=(
    sweet-gtk-theme
)

_branches=(
    master
    mars
    nova
    Ambar
    Ambar-Blue
)

_kinds=(
    Sweet
    Sweet-mars
    Sweet-nova
    Sweet-Ambar
    Sweet-Ambar-Blue
)
_commits=(
    7419abb592fbb8f032d9b8735b6b6f81b31214a6 # master
    9622074c79994c0abf22b37baeab682b4d603e25 # mars
    2477ffcd7f0c65e8eed3c537bda5b84c0447e4cd # nova
    a1716f02f0e7fd942cb29093b7e7cb6e2961f221 # Ambar
    d604db9073508393160c0526a5f012293a1cebc4 # Ambar-Blue
)

function srcname () {
    c="${_commits[$1]}"
    k="${_kinds[$1]}"
    echo "git.${pkgname}-${k}-${c}"
}


for i in "${!_kinds[@]}"; do
    c="${_commits[$i]}"
    k="${_kinds[$i]}"
    source+=("$(srcname "$i")::git+${url}#commit=$c")
done

sha256sums=('SKIP'
            'SKIP'
            'SKIP'
            'SKIP'
            'SKIP')

pkgver() {
    (cd "${srcdir}/$(srcname "0")" && git log -1 --format=%ad --date=format:'%Y%m%d')
}

prepare() {
    find "${srcdir}" -type f -name "*scss" -delete
    rm -rf "${srcdir}"/*/{Art,src}
    find "${srcdir}" -type d -empty -delete
}

package() {
    themes="${pkgdir}/usr/share/themes"

    for i in "${!_kinds[@]}"; do
        k="${_kinds[$i]}"
        install -dm755 "${themes}/${k}"
        cp -r "${srcdir}/$(srcname "$i")/"* "${themes}/${k}/"
    done
}
